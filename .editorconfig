root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.json]
indent_size = 2

[*.coffee]
indent_size = 4
insert_final_newline = true

[*.html]
indent_size = 4

[*.{js,mjs,cjs,json,ts,mts,cts,css,scss,sass,less,styl,yaml,yml}]
indent_size = 2
insert_final_newline = true
